@model WebUtils.Services.ConsentResponse
@{
    ViewData["Title"] = "Cookie Preferences";
}

<script>
    //window.location.href = '/app/cookies';
</script>

<h2>Cookie Preferences</h2>

@using (@Html.BeginForm("Post", "CookiePrefs", FormMethod.Post))
{
@Html.AntiForgeryToken()
<div class="w3-padding">
    <label>
        <input type="checkbox" name="cookieTypes" value="Necessary" checked disabled />
        Necessary Cookies (required)
    </label>
</div>
<div class="w3-padding">
    <label>
        @Html.CheckBox("cookieTypes", Model.CookiePrefs.Analytics, new { value = "Analytics" })
        Statistics Cookies
    </label>
</div>
<div class="w3-padding">
    <label>
        @Html.CheckBox("cookieTypes", Model.CookiePrefs.Marketing, new { value = "Marketing" })
        Marketing Cookies
    </label>
</div>
<button type="submit" class="btn btn-primary">Save Preferences</button>
}

